{
  "name": "Summarizer",
  "version": "1.0.0",
  "description": "Text Summarizer",

  "background": {
    "scripts": ["jquery.min.js", "background.js"],
    "persistent": false
  },
  "manifest_version": 2,
  "icons": {
    "16": "logo16.png",
    "32": "logo32.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "browser_action": {
    "default_popup": "./popup.html"
  },
  "options_page": "./options.html",
  "permissions": ["tabs", "<all_urls>", "storage"]
}
